# Manual:     ipsec.conf.5


version	2.0	# conforms to second version of ipsec.conf specification

# basic configuration
config setup
	nat_traversal=yes
	oe=off
	protostack=netkey
	interfaces="%none"


# Add connections here
conn l2tp-psk
	authby=secret
	pfs=no
	auto=add
	rekey=no
        type=transport
        left=<%= @server_ip %>
        leftprotoport=17/1701
        #
        # The remote user.
        #
        right=%any
        rightprotoport=17/0
        rightsubnet=vhost:%priv,%no
        forceencaps=yes

